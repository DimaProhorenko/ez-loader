{
  "name": "ez-loaders",
  "version": "1.0.0",
  "description": "easy loaders kit",
  "main": "app.js",
  "scripts": {
    "build:sass": "sass --no-source-map sass/:build/css",
    "watch:sass": "sass  --no-source-map --watch sass/:dist/css",
    "serve": "browser-sync start --server dist --files dist",
    "start": "npm-run-all --parallel watch:sass serve",
    "postbuild": "postcss build/css/*.css -u autoprefixer cssnano -r --no-map",
    "build": "npm-run-all build:sass postbuild"
  },
  "keywords": ["css loaders", "loaders"],
  "author": "Dima Prokhorenko",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.1",
    "cssnano": "^5.1.15",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "sass": "^1.60.0"
  }
}
